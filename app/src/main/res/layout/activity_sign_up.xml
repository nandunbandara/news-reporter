<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:paddingTop="10dp"
    tools:context="me.nandunb.newsreporter.SignUpActivity">

    <EditText
        android:id="@+id/user_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_signup_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_signup_email"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Display Name"
        android:inputType="textEmailAddress"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/user_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_signup_display_name"
        android:layout_below="@+id/user_signup_display_name"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn-signup"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_signup_password"
        android:layout_alignStart="@+id/user_signup_password"
        android:layout_below="@+id/user_signup_password"
        android:layout_marginTop="37dp"
        android:onClick="signUp"
        android:text="Signup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"
        android:text="| NEWS REPORTER |"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_signup_email"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/btn-signup"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="21dp"
        android:text="Already have an account?" />

    <TextView
        android:id="@+id/linkLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:text="Login"
        android:onClick="goToLogin"/>

</RelativeLayout>
